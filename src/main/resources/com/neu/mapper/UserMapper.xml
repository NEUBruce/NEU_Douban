<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.mapper.UserMapper">
    <!--    无法识别时使用ResultMap-->
    <resultMap id="userResultMap" type="com.neu.pojo.User">
        <result column="id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="gender" property="gender"/>
        <result column="vocation" property="vocation"/>
        <result column="zip_code" property="zipCode"/>
        <result column="age" property="age"/>
    </resultMap>
    <select id="selectAllUser" resultMap="userResultMap">
        select * from user
    </select>

    <select id="selectUserById" resultMap="userResultMap" parameterType="com.neu.pojo.User">
        select * from user where id=#{user.userId}
    </select>

    <insert id="insertUser">
        insert into user values(#{user.userId}, #{user.username}, #{user.password}, #{user.gender}, #{user.vocation},#{user.zipCode},#{user.age})
    </insert>

    <update id="modifyUser">
        update user set userId=#{user.userId}, userName=#{user.username}, password=#{user.password},gender=#{user.gender},vocation=#{user.vocation}, zipCode=#{user.zipCode},age=#{user.age}
    </update>

    <delete id="deleteUserById">
        delete from user where id=#{user.userId}
    </delete>

    <select id="login" resultMap="userResultMap">
        select * from user where username=#{user.username}
    </select>

</mapper>